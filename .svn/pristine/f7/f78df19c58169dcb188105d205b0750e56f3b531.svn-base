package com.dihuo.twodfire.retail.activity.setting;

import android.content.Intent;
import android.os.Bundle;
import android.view.LayoutInflater;
import android.view.View;
import android.widget.AdapterView;
import android.widget.AdapterView.OnItemClickListener;
import android.widget.ListView;

import com.dihuo.twodfire.retail.R;
import com.dihuo.twodfire.retail.activity.TitleActivity;
import com.dihuo.twofire.retail.adapter.SettingAdapter;

//import com.erweihuo.storepos.setting.hardware.HardwareSetting;

public class SettingActivity extends TitleActivity implements OnItemClickListener {
    
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.setting_main);
        setTitle(R.string.setting_main);
        
        ListView list = (ListView) findViewById(R.id.setting_main_list);
        list.addHeaderView(LayoutInflater.from(this).inflate(R.layout.setting_main_explain, null));
        list.setAdapter(new SettingAdapter(this));
        list.setOnItemClickListener(this);
    }

    @Override
    public void onItemClick(AdapterView<?> parent, View view, int position,
            long id) {
        Intent intent = new Intent();
        Class<?> tag = null;
        switch (position - 1) {//因为含有一个headview
            case SettingAdapter.ACCOUNT_INFO :
                tag = AccountInfoSettingActivity.class;
                break;
            case SettingAdapter.PARAM_SETTING :
                tag = ParamSettingActivity.class;
                break;
            case SettingAdapter.RECEIPT_SETTING :
                tag = ReceiptSettingActicity.class;
                break;
            case SettingAdapter.ROLE_PERMISSION_SETTING :
                tag = RolePermissionSettingActivity.class;
                break;
            //case SettingAdapter.HARDWARE_SETTING :
            //    intent.setClass(this, HardwareSetting.class);
            //    break;
            case SettingAdapter.PAY_SETTING :
                tag = PayWaySettingActivity.class;
                break;
            case SettingAdapter.BUSINESS_SETTING :
                tag = BusinessSettingActivity.class;
                break;
            case SettingAdapter.OPERATE_LOG :
                //intent.setClass(this, OperateLogSetting.class);
                break;
            case SettingAdapter.DATA_CLEAR :
                //intent.setClass(this, DataClearSetting.class);
                break;
        }
        
        if (tag != null) {
            intent.setClass(this, tag);
            startActivity(intent);
        }
    }

}
