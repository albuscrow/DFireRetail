<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:padding="8dp"
            android:background="#448f97a6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/scan"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/user_info_flicking" />

            <TextView
                android:id="@+id/search"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:gravity="center"
                android:text="查询"
                android:textColor="#fff"
                android:textSize="18.5sp" />

            <EditText
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/search"
                android:layout_toRightOf="@id/scan"
                android:background="@drawable/recharge_search"
                android:hint="条形码/简码/拼音码"
                android:textColorHint="#9fff"
                android:inputType="text"
                android:orientation="horizontal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            style="@style/setting_explain_text"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:padding="3dp"
            android:textColor="#9fff"
            android:textSize="17sp" />

        <com.dfire.retail.app.manage.widget.swipelayout.SwipeRefreshLayout
            android:id="@+id/goodsListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </com.dfire.retail.app.manage.widget.swipelayout.SwipeRefreshLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ico_help" />

    <ImageButton
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/user_info_add" />

    <ImageButton
        android:id="@+id/scanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/minus"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/ico_scan" />


</RelativeLayout>