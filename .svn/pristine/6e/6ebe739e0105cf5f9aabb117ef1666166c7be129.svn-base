package com.dihuo.twofire.retail.adapter;

import java.util.List;

import com.dihuo.twodfire.retail.R;
import com.dihuo.twodfire.retail.activity.goodsmanager.GoodsListActivity;
import com.dihuo.twodfire.retail.activity.goodsmanager.GoodsListWithImageActivity;
import com.dihuo.twodfire.retail.data.GoodsVo;

import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;

public class GoodsListAdapter extends BaseAdapter {
	GoodsListActivity activity;
	private LayoutInflater layoutInflater;
	private List<GoodsVo> data;

	public GoodsListAdapter(
			GoodsListActivity goodsListActivity, List<GoodsVo> goods) {
		this.activity = goodsListActivity;
		this.layoutInflater = LayoutInflater.from(activity);
		this.data = goods;
	}

	@Override
	public int getCount() {
		// TODO Auto-generated method stub
		return data.size();
	}

	@Override
	public Object getItem(int position) {
		return data.size();
	}

	@Override
	public long getItemId(int position) {
		return Long.parseLong(data.get(position).getGoodsId());
	}

	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		if (convertView == null) {
			convertView = layoutInflater.inflate(R.layout.item_good, null);
		}
		
		return convertView;
	}

}
