<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >  
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@null" >

        <ImageButton
            android:id="@+id/title_left"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/guide" />

        <ImageButton
            android:id="@+id/title_right"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/fication" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="华润万家万塘垫"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
       
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/name_icon" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="华天一"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="今天是2014年9月13 星期六"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" /> 
      
    	<!-- show the profit and loss -->
		<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:orientation="horizontal">    
			<com.erweihuo.storepos.login.IncomeDetail
		    android:id="@+id/yesterday"
		        android:layout_height="wrap_content"  
		        android:layout_width="wrap_content"
		        android:layout_weight="1"
		    >    
		</com.erweihuo.storepos.login.IncomeDetail>
    
		<com.erweihuo.storepos.login.IncomeDetail
		    android:id="@+id/today"
		        android:layout_height="wrap_content"  
		        android:layout_width="wrap_content"
		        android:layout_weight="1"
		    >
		    
		</com.erweihuo.storepos.login.IncomeDetail>

		<com.erweihuo.storepos.login.IncomeDetail
		    android:id="@+id/month"
		        android:layout_height="wrap_content"  
		        android:layout_width="wrap_content"
		        android:layout_weight="1"
		    >	    
		</com.erweihuo.storepos.login.IncomeDetail>
	</LinearLayout>
	
		  <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" />
		  
		<!-- 重新计算 -->
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ico_loading" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="华天一"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="@string/profit_sum"
            android:textColor="#ffffff"
            android:textSize="12sp" />
          <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ico_next_w" />
    </LinearLayout>

     <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" /> 
                <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/store_setting"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" />        
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:shrinkColumns="0,2,4,6"
                android:stretchColumns="0,2,4,6" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/shangpin"                      
                        android:tag="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/panel_truck"
                        android:onClick="ImgClickListener"
                        android:tag="2" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/kucun"
                        android:tag="3" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mendian"
                        android:onClick="ImgClickListener"
                        android:tag="4" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/xiaoxi"
                        android:tag="5" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shezhi"
                        android:onClick="ImgClickListener"
                        android:tag="6" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />
               
                </TableRow>                                  
            </TableLayout>
        </LinearLayout>
	
	</ScrollView>	

</LinearLayout>