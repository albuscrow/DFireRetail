<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout 
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:background="#dedae4"
                android:padding="8dp"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店"
                    android:textSize="18.5sp" />
                
                <TextView
                    android:id="@+id/shopName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:maxLines="1"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:drawableEnd="@drawable/ico_next_down"
                    android:drawableRight="@drawable/ico_next_down"
                    android:textColor="#0d8dc8"
                    android:textSize="18.5sp" />
                
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#448f97a6"
                android:padding="8dp" >
                
                <ImageButton
                    android:id="@+id/scan"
                    android:contentDescription="@null"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_info_flicking"/>
                
                <TextView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="查询"
                    android:textColor="#fff"
                    android:textSize="18.5sp" />
                
                <EditText
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/search"
                    android:layout_toRightOf="@id/scan"
                    android:background="@drawable/recharge_search"
                    android:hint="条形码/简码/拼音码"
                    android:inputType="text"
                    android:orientation="horizontal" />
                
            </RelativeLayout>
              
            <RelativeLayout 
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_height="wrap_content">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量"
                    android:textColor="#fff"
                    android:textSize="18.5sp" />
                
                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textSize="18.5sp"
                    android:textColor="#fff" />
                
                <ImageView android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:src="#5fff"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/num"/>
                
            </RelativeLayout>
            
        </LinearLayout>
        
<!--         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp" > -->
            
           <ImageButton
               android:id="@+id/help"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:background="@null"
               android:padding="8dp"
               android:src="@drawable/ico_help" />
           
            <ImageButton
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:padding="8dp"
                android:src="@drawable/user_info_add" />
            
             <ImageButton
                android:id="@+id/scanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/minus"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:background="@null"
                android:src="@drawable/ico_scan" /> 
 
            
        <!-- </RelativeLayout> -->

</RelativeLayout>