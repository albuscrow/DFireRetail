<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:baselineAligned="true"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bj"
            android:orientation="vertical" >
            <!-- 头上的个人头像信息的布局 -->
            <LinearLayout
                android:id="@+id/mine_top"
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                 <com.dihuo.twofire.retail.util.CircularImage
                    android:id="@+id/mine_personpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_nopic_user" />
                  <LinearLayout
		               android:layout_width="match_parent"
		               android:layout_height="wrap_content"
		               android:orientation="horizontal" >
                    	<TextView 
                    	    android:layout_width="match_parent"
		              		 android:layout_height="wrap_content"
		              		 android:layout_weight="1"
		              		 android:id="@+id/user_info_name"
		              		 android:gravity="right"
		              		 android:paddingRight="10dp"
		              		 android:textStyle="bold"
		              		 android:textSize="24sp"
		              		 android:text="李大卫" /> 
                    	
                    	 <TextView 
                    	    android:layout_width="match_parent"
		              		 android:layout_height="wrap_content"
		              		 android:layout_weight="1"
		              		 android:paddingLeft="10dp"
		              		 android:id="@+id/user_title"
		              		 android:gravity="left"
		              		 android:text="店长" />

                </LinearLayout>
                 		<TextView 
                    	    android:layout_width="match_parent"
		              		 android:layout_height="wrap_content"
		              		 android:id="@+id/user_store"
		              		 android:gravity="center_horizontal"
		              		 android:text="兰克咖啡餐饮有限公司" />
                  <ListView 
                    android:layout_marginTop="40dp"
				    android:id="@+id/more_info_list"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:paddingLeft="20dp"
    				android:paddingRight="20dp"
				    android:background="@null"
				    android:scrollbars="none" />
                  
 			</LinearLayout>
     </LinearLayout>
    </ScrollView>

</LinearLayout>