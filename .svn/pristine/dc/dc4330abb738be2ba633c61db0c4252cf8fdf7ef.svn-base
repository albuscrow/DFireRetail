<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj" >
    
    <ScrollView
        android:layout_width="match_parent"
        android:background="#b3ffffff"
        android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8ecef"
            android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/up_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	    
	    <ImageButton
	        android:id="@+id/up_add_above"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@null"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:src="@drawable/add_little" />

		</RelativeLayout>
		
	    <LinearLayout
	        android:id="@+id/up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/up_add"
	        android:layout_width="wrap_content"
	       	android:layout_gravity="center_horizontal" 
	        android:layout_height="wrap_content"
	        android:padding="30dp"
	        android:textColor="#c00"
	        android:drawablePadding="4dp"
	        android:drawableLeft="@drawable/add_red"
	        android:textSize="16.5sp"
	        android:textStyle="normal" />
	    
	        <View
	            android:id="@+id/up_split"
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="#b3808781" />
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:background="#e8ecef"
	        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/down_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	    
	    <ImageButton
	        android:id="@+id/down_add_above"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:src="@drawable/ico_find_w"
	        android:background="@null" />

		</RelativeLayout>
        
 	    
 	     <LinearLayout
	        android:id="@+id/down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/down_add"
	        android:layout_width="wrap_content"
	       	android:layout_gravity="center_horizontal" 
	        android:layout_height="wrap_content"
	        android:padding="30dp"
	        android:textColor="#c00"
	        android:drawablePadding="4dp"
	        android:drawableLeft="@drawable/ico_find_r"
	        android:textSize="16.5sp"
	        android:textStyle="normal" />   
	        
	    <View
	        android:id="@+id/down_split"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="#b3808781" />
	    
	    <Button
	        android:id="@+id/delete"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/delete_btn"
	        android:padding="8dp"
	        android:text="删除"
	        android:textColor="#fff"
	        android:textSize="18sp" />

    </LinearLayout>

</ScrollView>

</FrameLayout>