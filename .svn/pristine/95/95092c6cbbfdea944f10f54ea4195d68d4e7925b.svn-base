<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    <LinearLayout  
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@null" >
        <ImageView
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left"
            android:layout_gravity="left"
            android:scaleType="centerInside"
            android:tag="11"
            android:src="@drawable/guide" />
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/store_name"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="centerInside"
            android:tag="10"
            android:layout_gravity="center_vertical|left"
            android:gravity="right"
            android:onClick="ImgClickListener"
            android:src="@drawable/ico_more" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" />

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/name_icon" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="华天一"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="今天是2014年9月13 星期六"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/login_line" />

 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
           <android.support.v4.view.ViewPager
		        android:id="@+id/profit_viewflipper"
		        android:layout_width="match_parent"
		        android:layout_height="240dp"
		        android:background="@null"
		        android:clickable="true"
       			 />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/store_manager"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:shrinkColumns="0,2,4,6"
                android:stretchColumns="0,2,4,6" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/shangpin"
                        android:tag="1" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vip_type"
                        android:onClick="ImgClickListener"
                        android:tag="2" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/panel_truck"
                        android:tag="3" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/kucun"
                        android:onClick="ImgClickListener"
                        android:tag="4" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="ImgClickListener"
                        android:src="@drawable/mendian"
                        android:tag="5" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/xiaoxi"
                        android:onClick="ImgClickListener"
                        android:tag="6" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shezhi"
                        android:onClick="ImgClickListener"
                        android:tag="7" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/vip_loss"
                        android:onClick="ImgClickListener"
                        android:tag="8" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:background="@android:color/transparent" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sms_temp"
                        android:onClick="ImgClickListener"
                        android:tag="9" />                  
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_span="8"
                        android:background="@drawable/login_line" />
                </TableRow>

            </TableLayout>
        </LinearLayout>
      </LinearLayout>   
    </ScrollView>

</LinearLayout>