<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedae4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#cc0000" >

        <ImageButton
            android:id="@+id/title_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/user_info_return"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/cancel" />
        
        <ImageButton
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back_btn"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/save" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="门店订货"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_name_spell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/link_person"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/link_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/tel_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditList>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_fox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_open_bank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_bank_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/supply_bank_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.dfire.retail.app.common.item.ItemEditText>

            <Button
                android:id="@+id/search_logistics_records"
                style="@style/white_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_confirm"
                android:text="查询物流记录" />

            <Button
                android:id="@+id/delete_supply_record"
                style="@style/white_medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/delete"
                android:text="删除" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>