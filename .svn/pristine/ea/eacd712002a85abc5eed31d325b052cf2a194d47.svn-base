<?xml version="1.0" encoding="utf-8"?>
<com.dfire.retail.app.manage.activity.goodsmanager.MyCheckBoxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <TextView
        android:id="@+id/saveFlag"
        style="@style/save_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/unsave"
        android:text="未保存"
        android:textColor="@color/white"
        android:textSize="9sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/check_title"
        style="@style/setting_list_main_text"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#3d3d3d"
        android:textStyle="normal" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ico_switch"
        android:button="@drawable/ico_switch"
        android:checked="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#b5b5b5" />

</com.dfire.retail.app.manage.activity.goodsmanager.MyCheckBoxLayout>