<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     >

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/message_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#333"
         />

    <TextView
        android:id="@+id/message_stuatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:layout_centerInParent="true" 
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="#666"
           android:drawableEnd="@drawable/ico_next"
        android:drawableRight="@drawable/ico_next_w"
         />

    <TextView
        android:layout_marginBottom="13dp"
        android:lineSpacingExtra="15dp"
        android:id="@+id/message_Optime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_title_item" 
        android:textColor="#666"/>
      
   <TextView 
     android:id="@+id/message_messageid"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:visibility="gone"
  />
   
     

</RelativeLayout>