<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include 
        android:id="@+id/cancel_title"
        layout="@layout/setting_cancel_title"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/setting_list_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/setting_payway_left"
        android:paddingRight="@dimen/setting_payway_left" >

        <include
            android:id="@+id/user_name"
            layout="@layout/two_textview" />

        <include
            android:id="@+id/user_number"
            layout="@layout/two_textview" />

        <include
            android:id="@+id/current_password"
            layout="@layout/text1_edit1" />

        <include
            android:id="@+id/new_password"
            layout="@layout/text1_edit1" />

        <include
            android:id="@+id/again_password"
            layout="@layout/text1_edit1" />
    </LinearLayout>

</LinearLayout>