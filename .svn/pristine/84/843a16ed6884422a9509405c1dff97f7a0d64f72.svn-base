<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bj" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8fff"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/up_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#e8ecef"
	        android:padding="10dp"
	        android:drawableRight="@drawable/add_little"
	        android:textSize="18sp"
	        android:textStyle="bold" />

	    <ListView
	        android:id="@+id/up"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	    </ListView>
	    
	    <TextView
	        android:id="@+id/up_add"
	        android:layout_width="wrap_content"
	       	android:layout_gravity="center_horizontal" 
	        android:layout_height="wrap_content"
	        android:padding="30dp"
	        android:textColor="#f00"
	        android:drawablePadding="4dp"
	        android:drawableLeft="@drawable/add_red"
	        android:textSize="18sp"
	        android:textStyle="bold" />
        
 	    <TextView
 	        android:id="@+id/down_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8ecef"
            android:padding="10dp"
            android:textSize="18sp"
	        android:drawableRight="@drawable/add_little"
            android:textStyle="bold" />
 	    
 	     <ListView
	        android:id="@+id/down"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >

	    </ListView>
	    
	    <TextView
	        android:id="@+id/down_add"
	        android:layout_width="wrap_content"
	       	android:layout_gravity="center_horizontal" 
	        android:layout_height="wrap_content"
	        android:padding="30dp"
	        android:textColor="#f00"
	        android:drawablePadding="4dp"
	        android:drawableLeft="@drawable/add_red"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	    
	    <Button
	        android:id="@+id/delete"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:background="@drawable/delete_btn"
	        android:padding="8dp"
	        android:text="删除"
	        android:textColor="#fff"
	        android:textSize="18sp" />

    </LinearLayout>

</ScrollView>