<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bj" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg">
        
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#cc0000" >

        <ImageButton
            android:id="@+id/title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/cancel" />

        <ImageButton
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/save" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="门店进货"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商"
            android:layout_marginLeft="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/supplyName_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#0d8dc8"
            android:textSize="16sp" />
    </RelativeLayout>
	<View
	    android:id="@+id/view3"
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#999999"
		android:layout_below="@id/shop">
	</View>
	<RelativeLayout 
	    android:id="@+id/collect_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		 android:layout_below="@id/view3"
		 android:visibility="gone">
	    
		 <RelativeLayout
		     android:id="@+id/collect_view"
		     android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:padding="8dp" >
			
			 <TextView
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:text="订货单号"
			    android:textSize="16sp" />
			
			 <TextView 
			     android:id="@+id/stockInNo_tx"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_alignParentEnd="true"
			     android:layout_alignParentRight="true"
			     android:textColor="#666666"
			     android:layout_marginLeft="10dp"
			     android:textSize="16sp" />
		 </RelativeLayout>
		 <View 
		     android:layout_width="match_parent"
		     android:layout_height="0.1dp"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:layout_below="@id/collect_view"
		     android:background="#999999"/>		
	</RelativeLayout>
	<View
	    android:id="@+id/view2"
	    android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:layout_below="@id/collect_layout"
		android:background="#999999" 
        android:layout_marginTop="15dp"
	    />
	
    <RelativeLayout
        android:id="@+id/shop2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:background="@drawable/bg_lit"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="进货商品"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_little" />
    </RelativeLayout>
	<View
	    android:id="@+id/view1"
	    android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:layout_below="@id/shop2"
		android:background="#999999" 
	    />
    <ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:layout_below="@+id/view1"
		    >
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
				<LinearLayout 
				    android:id="@+id/store_collect_add_lv"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:orientation="vertical"  >
				</LinearLayout>
			    <RelativeLayout
			        android:id="@+id/add_layout"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:layout_below="@+id/store_collect_add_lv"
			        android:layout_marginTop="15dp"
			        android:gravity="center_vertical"
			        android:padding="10dp" >
			
			        <ImageView
			            android:id="@+id/imageView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignBottom="@+id/textView2"
			            android:layout_toLeftOf="@+id/textView2"
			            android:src="@drawable/add_little" />
			
			        <TextView
			            android:id="@+id/textView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:layout_centerVertical="true"
			            android:text="进货商品"
			            android:textColor="#CD0102"
			            android:textSize="18sp" />
			    </RelativeLayout>
			    
			    <View
			        android:id="@+id/view"
			        android:layout_width="fill_parent"
			        android:layout_height="0.1dp"
			        android:background="#999999"
			        android:layout_below="@id/add_layout"
			        >
			    </View>
			    
			    <LinearLayout 
			        android:id="@+id/count_view"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:layout_below="@id/view"
			        android:orientation="horizontal">
			        <TextView
			            android:id="@+id/goodsTotalPrice" 
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:text="进货总金额(元)：0.00"/>
			    	<TextView 
			    	    android:id="@+id/goodsTotalSum"
			            android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:layout_weight="2"
			            android:text="总数量：0"/>
			    </LinearLayout>
			    
			    <View
			        android:id="@+id/view0"
			        android:layout_width="fill_parent"
			        android:layout_height="0.1dp"
			        android:background="#999999"
			        android:layout_below="@id/count_view"
			        >
			    </View>
			      <Button
		            android:id="@+id/confirm"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:gravity="center"
		            android:layout_marginTop="15dp"
		            android:layout_marginBottom="15dp"
		            android:background="@drawable/button_confirm"
		            android:layout_below="@id/view0"
		            android:padding="10dp"
		            android:text="确定收货"
		            android:visibility="gone"
		            android:textColor="#fff"
		            android:textSize="20sp" />
			      
			    <Button
		            android:id="@+id/delete"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
					android:gravity="center"
		            android:layout_marginTop="15dp"
					android:layout_marginBottom="15dp"
		            android:background="@drawable/delete"
		            android:layout_below="@id/confirm"
		            android:padding="10dp"
		            android:text="拒绝收货"
		            android:visibility="gone"
		            android:textColor="#fff"
		            android:textSize="20sp" />
			   
		    </RelativeLayout>
		</ScrollView>
 	</RelativeLayout>
</RelativeLayout>