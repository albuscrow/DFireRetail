<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/stock_shop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dedae4"
            android:padding="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店"
                android:id="@+id/stock_query_shop"
                android:textSize="18.5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/stock_query_arrow"
                android:layout_alignTop="@id/stock_query_shop"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:textSize="18.5sp"
                android:text="迪火体验超市"
                android:textColor="#0d8dc8" />
            <ImageView 
                android:id="@+id/stock_query_arrow"
                android:src="@drawable/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                 android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#448f97a6"
            android:gravity="center_vertical"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/stock_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/user_info_flicking" />

            <TextView
                android:id="@+id/stock_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="查询"
                android:textColor="#fff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/stock_shop_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/stock_search"
                android:layout_toRightOf="@id/stock_scan"
                android:maxLength="16"
                android:background="@drawable/recharge_search"
                android:inputType="text"
                android:orientation="horizontal"
                android:hint="条形码/简码/拼音码" />
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/stock_query_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1" >
    </ListView>

</RelativeLayout>