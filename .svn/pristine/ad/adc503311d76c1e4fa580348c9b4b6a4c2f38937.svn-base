package com.dihuo.twofire.retail.adapter;

import java.util.ArrayList;
import java.util.List;

import android.content.Context;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.ImageView;
import android.widget.TextView;

import com.dihuo.twodfire.retail.R;
import com.dihuo.twodfire.retail.data.SearchGoodsVo;

/**
 * 库存管理-库存查询适配器
 * @author wangpeng
 *
 */
public class StoreAddGoodsAdapter extends BaseAdapter{

	private Context context;
	private List<SearchGoodsVo> list=new ArrayList<SearchGoodsVo>();
	private LayoutInflater mLayoutInflater;
	
	public StoreAddGoodsAdapter(Context context, List<SearchGoodsVo> list) {
		super();
		this.context = context;
		this.list = list;
		mLayoutInflater =  LayoutInflater.from(context);
	}

	@Override
	public int getCount() {
		return list.size();
	}

	@Override
	public Object getItem(int position) {
		return list.get(position);
	}

	@Override
	public long getItemId(int position) {
		return position;
	}

	@Override
	public View getView(int position, View convertView, ViewGroup arg2) {
		ViewHolder viewHolder = null;
        if (convertView == null) {
            convertView = mLayoutInflater.inflate(R.layout.stock_add_goods_item, null);
            viewHolder = new ViewHolder();
            viewHolder.goods_name = (TextView) convertView.findViewById(R.id.goods_name);
            viewHolder.buying_price = (TextView) convertView.findViewById(R.id.buying_price);
            viewHolder.shelf_days = (TextView) convertView.findViewById(R.id.shelf_days);
            viewHolder.tock_total = (TextView) convertView.findViewById(R.id.tock_total);
            
            convertView.setTag(viewHolder);
        } else {
            viewHolder = (ViewHolder) convertView.getTag();
        }
        	
	        viewHolder.goods_name.setText("商品名称:"+list.get(position).getGoodsName()+"");
	        viewHolder.buying_price.setText("商品进价:"+list.get(position).getPurchasePrice()+"");
	        viewHolder.shelf_days.setText("商品保质期天数:"+list.get(position).getPeriod()+"");		        
	        viewHolder.tock_total.setText("前库存数:"+list.get(position).getNowstore()+"");
	                
        return convertView;
	}
	
	 private class ViewHolder {
	        TextView goods_name;
	        TextView buying_price;
	        TextView shelf_days;
	        TextView tock_total;
	        
	    }

}
