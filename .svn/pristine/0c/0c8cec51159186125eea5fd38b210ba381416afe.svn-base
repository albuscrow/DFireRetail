<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bj" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8fff"
        android:orientation="vertical" >
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" >
            
 			<CheckBox
 			    android:id="@+id/checkbox"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:layout_gravity="right|center_vertical"
 			    android:background="@drawable/ico_switch"
 			    android:button="@drawable/ico_switch"
 			    android:checked="true" />

 			<TextView
 			    android:id="@+id/_isSold"
 			    android:layout_width="match_parent"
 			    android:layout_height="wrap_content"
 			    android:textColor="#f00"
 			    android:gravity="center_horizontal"
 			    android:textSize="20sp"
 			    android:text="商品已下架"
 			    android:layout_toRightOf="@id/checkbox" />
 			
			<TextView
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/_isSold"
			    android:layout_toRightOf="@id/checkbox"
			    android:gravity="center_horizontal"
			    android:text="在收银以外的所有设备上(包括来我店)不显示"
			    android:textSize="12sp" />

        </RelativeLayout>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8ecef"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="商品详情"/>


        <include
            android:id="@+id/tiaoma"
            layout="@layout/set_edit_textview" />

        <include
            android:id="@+id/daima"
            layout="@layout/set_edit_textview" />
        
		<include
            android:id="@+id/name"
            layout="@layout/set_edit_textview" />
		
		<include
            android:id="@+id/jinhuojia"
            layout="@layout/set_edit_textview" />
		
		<include
            android:id="@+id/lingshoujia"
            layout="@layout/set_edit_textview" />
		
		
		<include
            android:id="@+id/kucun"
            layout="@layout/set_edit_textview" />
		
        <include
            android:id="@+id/tongbu"
            layout="@layout/next_down" />
        
        
		<TextView 
		    android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8ecef"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="扩展信息"/>
		
		<include
            android:id="@+id/jianma"
            layout="@layout/set_edit_textview" />
		
		<include
            android:id="@+id/pingyinma"
            layout="@layout/set_edit_textview" />

        <include
            android:id="@+id/sort"
            layout="@layout/next_down" />
        
		<include
            android:id="@+id/guige"
            layout="@layout/set_edit_textview" />
		<include
            android:id="@+id/pinpan"
            layout="@layout/set_edit_textview" />
		<include
            android:id="@+id/chandi"
            layout="@layout/set_edit_textview" />
		
		<include
            android:id="@+id/baozhiqi"
            layout="@layout/set_edit_textview" />
		
		
		<include
            android:id="@+id/image"
            layout="@layout/set_edit_textview" />
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:padding="5dp"
		    android:layout_height="wrap_content">
		
		<ImageButton
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="10dp"
		    android:scaleType="fitXY"
		    android:background="@null"
		    android:src="@drawable/bg_03_min" />
		
		<ImageButton
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:background="@null"
		    android:src="@drawable/ico_block" />

		</RelativeLayout>
		
		
	    <TextView 
		    android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8ecef"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="销售设置"/>
	    
		<include
            android:id="@+id/ticheng"
            layout="@layout/set_edit_textview" />
		
        <include
            android:id="@+id/jifen"
            layout="@layout/checkbox" />
        
        <include
            android:id="@+id/youhui"
            layout="@layout/checkbox" />
        
        <Button 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除"/>
        
    </LinearLayout>

</ScrollView>