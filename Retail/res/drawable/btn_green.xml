<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/green_btn_bg" />

            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/green_btn_bg"
                android:startColor="@color/green_btn_bg" />

            <corners android:radius="4dp" />

            <stroke
                android:width="1dp"
                android:color="@color/green_btn_bg" />
        </shape>
    </item>

</layer-list>