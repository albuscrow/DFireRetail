<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >   
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            android:orientation="vertical"
            >
            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>  
            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userAccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/> 
            <RelativeLayout
                android:id="@+id/userPasswordReset"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
       			android:layout_marginRight="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/userResetTitle"
                    style="@style/black_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:text="@string/resetPasswordTitle"
                    android:gravity="left|center_vertical"
                    android:textSize="15sp" />

	                <TextView
	                    android:id="@+id/resetButton"
	                    android:textColor="@color/white"
	                    android:paddingLeft="10dp"
	                    android:paddingRight="10dp"
	                    android:textSize="15sp"
	                    android:layout_width="wrap_content"
	                    android:layout_height="30dp"
	                    android:text="@string/resetPassword"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:background="@color/green"
	                    android:enabled="false"
	                    android:gravity="right|end|center_vertical" />
   
	            </RelativeLayout>     
    	     <View
    	         	android:id="@+id/spareLine"
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentLeft="true"    
			        style="@style/content_hline"
			        android:contentDescription="line" />             
            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/> 
            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userStaffCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/> 
                                                                           
            <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userRole"
                android:tag="1"
                android:gravity="right"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userShopName"
                android:tag="2"
                android:gravity="right"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userInDate"
                android:tag="3"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userSex"
                android:tag="4"
                android:gravity="right"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userBirthday"
                android:tag="5"
                android:gravity="right"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
           <com.dfire.retail.app.common.item.ItemEditList
                android:id="@+id/userIdentityType"
                android:tag="6"
                android:gravity="right"
                android:onClick="ClickListener"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>           
           <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userIdentityNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>   
            <com.dfire.retail.app.common.item.ItemEditText
                android:id="@+id/userAdress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>  
                      
            <com.dfire.retail.app.common.item.ItemPortraitImage
                android:id="@+id/userPortrait"
                android:layout_marginTop="5dp"
                android:paddingBottom="20dp" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/> 
           	<Button
		     	android:visibility="gone"
	            android:id="@+id/userDelete"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:padding="10dp"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginBottom="20dp"
	            android:background="@drawable/delete_btn"
	            android:textSize="18sp"
	            android:textColor="#fff"
	            android:text="删除"/>          
     </LinearLayout>     
 </ScrollView>
