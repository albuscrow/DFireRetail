<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_bj" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dedae4"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ico_next"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="#0d8dc8"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#448f97a6"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" >

                <ImageButton
                    android:id="@+id/scan"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/user_info_flicking" />

                <TextView
                    android:id="@+id/search"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="查询"
                    android:textColor="#fff"
                    android:textSize="14sp" />
                
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/search"
                    android:layout_toRightOf="@id/scan"
                    android:background="@drawable/recharge_search" >
                    
					<ImageButton
					    android:id="@+id/clear"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentRight="true"
					    android:layout_centerVertical="true"
					    android:background="@null"
					    android:src="@drawable/ico_clear_input"
					    android:visibility="gone" />
					
	                <EditText
	                    android:id="@+id/code"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_toLeftOf="@id/clear"
	                    android:background="@null"
	                    android:drawablePadding="3dp"
	                    android:gravity="center_vertical"
	                    android:layout_centerVertical="true"
	                    android:hint="条形码/简码/拼音码"
	                    android:inputType="text"
	                    android:orientation="horizontal"
	                    android:textColor="@color/half_white"
	                    android:textColorHint="@color/half_white"
	                    android:textSize="14sp" />

				</RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品数量"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/num"
                    android:layout_marginTop="8dp"
                    android:src="#5fff" />
            </RelativeLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ico_help" />

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/user_info_add" />

        <ImageButton
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/add"
            android:background="@null"
            android:padding="8dp"
            android:src="@drawable/ico_scan" />

    </RelativeLayout>

</ScrollView>