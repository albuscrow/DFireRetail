<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/saveTag"
            style="@style/save_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/unsave"
            android:text="未保存"
            android:textColor="@color/white"
            android:textSize="9sp" />
        
    

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="vertical" >
			        
             <TextView
                 android:id="@+id/lblName"
                 android:layout_marginTop="5dp"
                 style="@style/black_medium"
                 android:layout_width="wrap_content"
                 android:layout_height="44dp"
                 android:text="@string/store_logo"
                 android:textStyle="bold"
                 android:gravity="left|center_vertical"
                 android:textSize="15sp" />
       
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/logoArea"
                android:layout_height="192dp"
                android:layout_below="@+id/lblName"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/lblVal"
		   			 android:background="@color/transparent"
                    android:layout_width="290dp"
                    android:layout_height="192dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:enabled="false"
                    android:layout_centerInParent="true" />
                
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_shop_logo_line"
                android:background="@drawable/goods_image_add"
  				android:scaleType="fitXY"
                android:orientation="vertical" >

              
          	  </LinearLayout>
            
            </RelativeLayout>
		      <ImageView
		         android:id="@+id/img"
		         android:layout_width="30dp"
		         android:layout_height="30dp"
		         android:layout_marginTop="35dp"
		         android:layout_gravity="right"
		         android:layout_alignParentRight="true"
		         android:contentDescription="line"
		         android:src="@drawable/ico_remove"
		         android:visibility="visible" />  
		         
		    <ImageButton
	        android:id="@+id/retail_info_help"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	        android:layout_gravity="left"
		    android:layout_centerVertical="true"
	        android:background="@null"
	        android:src="@drawable/ico_help" /> 
       </RelativeLayout>
    </FrameLayout>
</LinearLayout>
