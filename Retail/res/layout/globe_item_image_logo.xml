<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/saveTag"
            style="@style/save_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/unsave"
            android:text="未保存"
            android:textColor="@color/white"
            android:textSize="9sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lblName"
                style="@style/black_medium"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="@string/store_logo"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/logoArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblName"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/add_shop_logo_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/goods_image_add"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:scaleType="fitXY" >

                    <ImageView
                        android:id="@+id/lblVal"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:enabled="false"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrow_down"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="35dp"
                android:src="@drawable/ico_remove"
                android:visibility="visible" />
        </RelativeLayout>
    </FrameLayout>
<View
        style="@style/content_hline"
        android:contentDescription="line" />
</LinearLayout>