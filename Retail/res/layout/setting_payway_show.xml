<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <include layout="@layout/setting_payway_base" />
    
    <Button 
        android:id="@+id/payway_show_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ico_delete"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/setting_payway_left"/>
        
    <Button 
        android:id="@+id/payway_show_edit"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ico_edit_w"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/setting_payway_left"/>
</FrameLayout>
