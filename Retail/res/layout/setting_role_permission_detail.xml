<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/setting_detail_bg"
    android:paddingLeft="@dimen/setting_payway_left"
    android:paddingRight="@dimen/setting_payway_left" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_role_list_height" >
    
            <TextView
                style="@style/setting_list_main_text"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/role" />
    
            <TextView
                android:id="@+id/role"
                style="@style/setting_payway_create_button"
                android:layout_gravity="right|center_vertical"
                android:text="@string/role" />
    
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/black" />
        </FrameLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_role_list_height" >
    
            <TextView
                style="@style/setting_list_main_text"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/order" />
    
            <Button
                android:id="@+id/order"
                style="@style/setting_payway_create_button"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ico_next_down"
                android:text="@string/order_from_little" />
                
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/black" />
        </FrameLayout>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_role_list_height" >
    
            <TextView
                style="@style/setting_list_main_text"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/pre_premission" />
            
            <CheckBox
                android:id="@+id/pre_permission_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ico_switch"
                android:button="@drawable/ico_switch"
                android:checked="true" />
                
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/black" />
        </FrameLayout>
        
        <LinearLayout 
            android:id="@+id/pre_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_role_list_height" >
    
            <TextView
                style="@style/setting_list_main_text"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/bg_permission" />
            
            <CheckBox
                android:id="@+id/bg_permission_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ico_switch"
                android:button="@drawable/ico_switch"
                android:checked="true" />
                
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:background="@color/black" />
        </FrameLayout>
        
        <LinearLayout 
            android:id="@+id/bg_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"/>
        
    </LinearLayout>

</ScrollView>
