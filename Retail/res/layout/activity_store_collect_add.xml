<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_bj" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:padding="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="供应商"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/supplyName_tx"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ico_next_down"
            android:drawableRight="@drawable/ico_next_down"
            android:text="请选择"
            android:textColor="#0d8dc8"
            android:textSize="15sp" />
    </RelativeLayout>
	<View
	    android:id="@+id/view3"
		android:layout_width="fill_parent"
		android:layout_height="0.1dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#999999"
		android:layout_below="@id/shop">
	</View>
	<RelativeLayout 
	    android:id="@+id/collect_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		 android:layout_below="@id/view3"
		 android:visibility="gone">
	    
		 <RelativeLayout
		     android:id="@+id/collect_view"
		     android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:padding="8dp" >
			
			 <TextView
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:text="进货单号"
			    android:textSize="15sp" />
			
			 <TextView 
			     android:id="@+id/stockInNo_tx"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_alignParentEnd="true"
			     android:layout_alignParentRight="true"
			     android:textColor="#666666"
			     android:layout_marginLeft="10dp"
			     android:textSize="15sp" />
		 </RelativeLayout>
		 <View 
		     android:layout_width="match_parent"
		     android:layout_height="0.1dp"
		     android:layout_marginLeft="10dp"
		     android:layout_marginRight="10dp"
		     android:layout_below="@id/collect_view"
		     android:background="#999999"/>		
	</RelativeLayout>
	<View
	    android:id="@+id/view2"
	    android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:layout_below="@id/collect_layout"
		android:background="#999999" 
        android:layout_marginTop="15dp"
	    />
	
    <RelativeLayout
        android:id="@+id/shop2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:background="@drawable/bg_lit"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/collect_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="进货商品"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/collect_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add_little" />
    </RelativeLayout>
	<View
	    android:id="@+id/view1"
	    android:layout_width="match_parent"
		android:layout_height="0.1dp"
		android:layout_below="@id/shop2"
		android:background="#999999" 
	    />
    <ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:layout_below="@+id/view1"
			android:layout_marginBottom="20dp"
			android:scrollbars="none" 
		    >
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" >
				<LinearLayout 
				    android:id="@+id/store_collect_add_lv"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:orientation="vertical"  >
				</LinearLayout>
			    <RelativeLayout
			        android:id="@+id/add_layout"
			        android:layout_width="match_parent"
			        android:layout_height="44dp"
			        android:layout_alignParentLeft="true"
			        android:layout_below="@+id/store_collect_add_lv"
			        android:layout_marginTop="10dp"
			        android:layout_marginBottom="10dp"
			        android:gravity="center_vertical"
			        android:padding="10dp" >
			
			        <ImageView
			            android:id="@+id/imageView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignBottom="@+id/textView2"
			            android:layout_toLeftOf="@+id/textView2"
			            android:src="@drawable/add_red" />
			
			        <TextView
			            android:id="@+id/textView2"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_centerHorizontal="true"
			            android:layout_centerVertical="true"
			            android:layout_marginLeft="5dp"
			            android:text="添加进货商品..."
			            android:textColor="#CD0102"
			            android:textSize="15sp" />
			    </RelativeLayout>
			    
			    <View
			        android:id="@+id/view"
			        android:layout_width="fill_parent"
			        android:layout_height="0.1dp"
			        android:background="#999999"
			        android:layout_below="@id/add_layout"
			        >
			    </View>
			    
			    <LinearLayout 
			        android:id="@+id/count_view"
			        android:layout_width="fill_parent"
			        android:layout_height="48dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:layout_below="@id/view"
			        android:orientation="horizontal">
			        <LinearLayout 
			            android:id="@+id/goodsTotalPrice_view"
			            android:layout_width="wrap_content"
			            android:layout_gravity="center_vertical"
			            android:layout_height="wrap_content"
			            android:gravity="left"
			            android:orientation="horizontal">
				        <TextView
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:textSize="15sp"
				            android:text="进货总金额(元)："/>
				        <TextView
				            android:id="@+id/goodsTotalPrice" 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:textSize="15sp"
				            android:text="0.00"/>
			        </LinearLayout>
			        <LinearLayout 
			            android:id="@+id/goodsTotalSum_view"
			            android:layout_width="fill_parent"
			            android:layout_gravity="center_vertical"
			            android:layout_height="wrap_content"
				        android:gravity="right"
			            android:orientation="horizontal">
				    	<TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:textSize="15sp"
				            android:text="总件数："/>
				    	<TextView 
				    	    android:id="@+id/goodsTotalSum"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center_vertical"
				            android:textSize="15sp"
				            android:text="0"/>
			    	</LinearLayout>
			    </LinearLayout>
			    
			    <View
			        android:id="@+id/view0"
			        android:layout_width="fill_parent"
			        android:layout_height="0.1dp"
			        android:background="#999999"
			        android:layout_below="@id/count_view"
			        >
			    </View>
			      <Button
		            android:id="@+id/confirm"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:gravity="center"
		            android:layout_marginTop="15dp"
		            android:layout_marginRight="10dp"
					android:layout_marginLeft="10dp"
		            android:background="@drawable/button_confirm"
		            android:layout_below="@id/view0"
		            android:padding="10dp"
		            android:text="确定收货"
		            android:textSize="15sp"
		            android:textColor="#fff"
		             />
			      
			    <Button
		            android:id="@+id/refuse"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
					android:gravity="center"
		            android:layout_marginTop="15dp"
					android:layout_marginBottom="15dp"
					android:layout_marginRight="10dp"
					android:layout_marginLeft="10dp"
		            android:background="@drawable/delete"
		            android:layout_below="@id/confirm"
		            android:padding="10dp"
		            android:text="拒绝收货"
		            android:textColor="#fff"
		            android:textSize="15sp" />
			   
		    </RelativeLayout>
		</ScrollView>
 	</RelativeLayout>
</RelativeLayout>