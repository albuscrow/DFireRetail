<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:paddingTop="29dp"
    android:background="@drawable/user_info_bg_02"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/member_info_search_result_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxEms="13"
            android:singleLine="true"
            android:text=""
            android:textSize="17sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/member_info_search_result_item_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/member_info_search_result_item_user_name"
            android:text=""
            android:textSize="13sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/member_info_search_result_item_card_type"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="17sp"
            android:textColor="#757677" />

        <TextView
            android:id="@+id/member_info_search_result_item_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="41dp"
            android:text=""
            android:textSize="15sp"
            android:textColor="#757677" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/user_info_arrow_right" />
<View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/user_info_line" />
</RelativeLayout>
