<?xml version="1.0" encoding="utf-8"?>

<com.dfire.retail.app.manage.activity.goodsmanager.MySpinnerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >
    
    <TextView
        android:id="@+id/saveFlag"
        style="@style/save_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:background="@drawable/unsave"
        android:text="未保存"
        android:textColor="@color/white"
        android:textSize="9sp" />
    
    <TextView
        android:id="@+id/main"
        style="@style/setting_list_main_text"
        android:layout_centerVertical="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#3d3d3d"
        android:textStyle="normal" />
    
    <ImageButton
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/clear_input"
        android:visibility="gone" />

    <TextView
        android:id="@+id/second"
        style="@style/setting_list_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/clear"
        android:layout_toRightOf="@id/main"
        android:textStyle="normal"
        android:background="@null"
        android:gravity="end|center_vertical"
        android:maxLines="3"
        android:paddingBottom="10dp"
        android:text="请选择"
        android:paddingTop="10dp"
        android:textColor="#0088cc"
        android:drawableRight="@drawable/ico_next_down" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#b5b5b5" />
    
</com.dfire.retail.app.manage.activity.goodsmanager.MySpinnerLayout>
