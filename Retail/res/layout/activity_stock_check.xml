<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <!-- <com.dfire.retail.app.common.item.ItemEditList
        android:id="@+id/lsShop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" /> -->
		<RelativeLayout
            android:id="@+id/shop"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_lit"
            android:padding="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="门店"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shopName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableEnd="@drawable/ico_next"
                android:drawableRight="@drawable/ico_next"
                android:textColor="#0d8dc8"
                android:textSize="18sp" />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_lit"
        android:layout_below="@id/shop"
        
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="开始盘点（全部）"
            android:textColor="@color/white"
            android:visibility="gone" />
        <Button
            android:id="@+id/btnStartSample"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="开始盘点（抽样）"
            android:textColor="@color/white"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="继续盘点"
            android:textColor="@color/white"
            android:visibility="gone" />
        
         <Button
            android:id="@+id/btnReport"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="查询未盘点商品"
            android:textColor="@color/white"
            android:visibility="gone" />
         
         <Button
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_red_select"
            android:text="取消盘点"
            android:textColor="@color/white"
            android:visibility="gone" />
         
         <Button
            android:id="@+id/btnFinish"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="结束盘点"
            android:textColor="@color/white" 
            android:visibility="gone"/>
         <TextView 
            android:id="@+id/txtTip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/hit_color"
            android:textSize="14sp"
            android:text="提示：\n抽样盘点"
            android:visibility="gone"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_payway_bottom"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp" >

        <ImageButton
            android:id="@+id/help"
            style="@style/title_btn_style"
            android:src="@drawable/ico_help"
            android:layout_gravity="bottom"
            android:contentDescription="@string/help" />
        
    </FrameLayout>
</RelativeLayout>