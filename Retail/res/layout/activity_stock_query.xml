<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#70FFFFFF">
			<RelativeLayout
	            android:id="@+id/shop"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:background="@drawable/bg_lit"
	            android:padding="8dp" 
	           >
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:text="门店"
	                android:gravity="center_vertical"
	                android:textSize="15sp" />
	
	            <TextView
	                android:id="@+id/stockShopName"
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:layout_alignParentEnd="true"
	                android:layout_alignParentRight="true"
	                android:drawableEnd="@drawable/ico_next"
	                android:drawableRight="@drawable/ico_next"
	                android:textColor="#0d8dc8"
	                android:gravity="right"
	                android:textSize="15sp" />
	        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/stock_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/user_info_flicking" />

            <TextView
                android:id="@+id/stock_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:text="查询"
                android:textColor="#fff"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/stock_shop_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/stock_search"
                android:layout_toRightOf="@id/stock_scan"
                android:maxLength="16"
                android:textSize="15sp"
                android:background="@drawable/recharge_search"
                android:inputType="text"
                android:textColor="#fff"
		    	android:textColorHint="#90ffffff"
                android:orientation="horizontal"
                android:hint="条形码/简码/拼音码" />
             <ImageView
		          android:id="@+id/clear_input"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_alignRight="@+id/stock_shop_input"
		          android:layout_centerVertical="true"
		          android:layout_marginRight="5dp"
		          android:visibility="gone"
		          android:src="@drawable/ico_clear_input" />
        </RelativeLayout>
    </LinearLayout>
	</LinearLayout>
	    <ImageButton
	        android:id="@+id/stock_info_help"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="@null"
	        android:padding="14dp"
	        android:src="@drawable/ico_help" />

	    <ImageButton
	        android:id="@+id/stock_query_scan"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:background="@null"
	        android:padding="8dp"
	        android:src="@drawable/ico_scan" /> 


      
</RelativeLayout>