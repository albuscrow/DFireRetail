<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bj"
    android:orientation="vertical" >

    <com.dfire.retail.app.common.item.ItemEditList
        android:id="@+id/lsShop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lsShop"
        
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="开始盘点"
            android:textColor="@color/white" />
        
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="继续盘点"
            android:textColor="@color/white" />
        
         <Button
            android:id="@+id/btnReport"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="汇总盘点结果报表"
            android:textColor="@color/white" />
         
         <Button
            android:id="@+id/btnCancel"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_red_select"
            android:text="取消盘点"
            android:textColor="@color/white" />
         
         <Button
            android:id="@+id/btnFinish"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_green_select"
            android:text="完成盘点"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>